		"autoprefixer": "^10.4.19",
		"clsx": "^2.1.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.41.0",
		"formsnap": "^1.0.1",
